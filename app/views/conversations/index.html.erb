<%= render "navbar" %>

<div style="color: rgb(22 101 52); margin-bottom: 20px; text-align: center; font-size: 1.5em;">
  <p><%= notice %></p>
</div>

<div id="conversations" style="margin: 20px;">
  <% @conversations.each do |conversation| %>
    <div style="display: flex; justify-content: space-between; align-items: center; background-color: #f9f9f9; padding: 10px; border-radius: 5px; margin-bottom: 10px;">
        ID: <%= conversation.id %>
      <%= link_to "Show", conversation, style: "background-color: rgb(22 101 52); color: white; text-decoration: none; padding: 10px 20px; border-radius: 5px; font-size: 1em;" %>
    </div>
  <% end %>
</div>

<div style="margin: 40px 25px ; text-align: right;">
  <%= link_to "New conversation", new_conversation_path, style: "background-color: rgb(22 101 52); color: white; text-decoration: none; padding: 10px 20px; border-radius: 5px; font-size: 1em;" %>
</div>


